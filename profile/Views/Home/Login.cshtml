

@model profile.Models.User
@using Microsoft.AspNetCore.Http


<br />
<br />
<div class="container">


    <h1>Log In</h1>


    <form asp-controller="Home" asp-action="AuthenticateUser" method="post" class="form-group">
        @Html.AntiForgeryToken()

        <hr />
        <br />

        <div class="form-group col-sm-8">

            <label>Email</label>
            <input type="email" id="EmailAddress" name="EmailAddress" class="form-control" placeholder="a@a.a" required />

            <label>Password</label>
            <input type="password" id="Password" name="Password" class="form-control" placeholder="a" required />

            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> Remember me ?
                </label>
            </div>

            <button type="submit" class="btn btn-success">Log In</button>

        </div>

    </form>
    
</div>
