<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>



@using Microsoft.AspNetCore.Http

@model profile.Models.User

@{
    Layout = "_Layout";
    // ViewBag.Title = "";
}
<div class="container">
    <h2> Edit Profile </h2>
    <form asp-controller="Home" asp-action="EditProfile" method="post">
        <input type="hidden" value="@Model.userid" asp-for="userid" name="UserId" />
        <div class="form-group col-sm-8">
            <label align="left">First Name: </label>
            <input asp-for="firstname" class="form-control" />
        </div>
        <div class="form-group col-sm-8">
            <label align="left">Last Name: </label>
            <input asp-for="lastname" class="form-control" />
        </div>
        <div class="form-group col-sm-8">
            <label align="left">Email: </label>
            <input asp-for="emailaddress" class="form-control" />
        </div>
        <div class="form-group col-sm-8">
            <label align="left">Password: </label>
            <input asp-for="password" class="form-control" />
        </div>
        <div class="form-group col-sm-8">
            <label align="left">Country: </label>
            <input asp-for="country" class="form-control" />
        </div>
        <div class="form-group col-sm-8">
            <label align="left">Postal Code: </label>
            <input asp-for="postalcode" class="form-control" />
        </div>
        <div class="form-group col-sm-8">
            <label align="left">Address: </label>
            <input asp-for="address" class="form-control" />
        </div>
        <div class="form-group col-sm-8">
            <label align="left">City: </label>
            <input asp-for="city" class="form-control" />
        </div>
        <div class="form-group col-sm-8">
            <label align="left">Date Of Birth: </label>
            <input asp-for="dateofbirth" class="form-control" />
        </div>
        <div class="form-group col-sm-8">
            <label>Role: </label>
            <select class="form-control" asp-for="roleid">
                <option value=1 selected>General User</option>
                <option value=2>Admin</option>
            </select>
        </div>
        <br />
        <br />
        <div class="col-sm-8">
            <button class="btn btn-large btn-success" type="submit">Update</button>
        </div>
    </form>
</div>
