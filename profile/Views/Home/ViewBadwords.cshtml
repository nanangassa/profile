@{
}


@model IEnumerable<profile.Models.BadWord>

@{
    Layout = "_Layout";
    // ViewBag.Title = "View BadWords";
}

<h3> View Badwords </h3>
<div class="container">
    <form asp-controller="Home" asp-action="AddBadWordToDatabase">
        <fieldset>
            <legend>Add Bad Word</legend>
            <input type="text" name="badword" />
            <input type="submit" value="Add" />
        </fieldset>
    </form>
    <div class="row">
        <div class="col-lg-12 col-sm-8">
            <br />
            <h3>List of Bad Words:</h3>
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-8">
            @if (Model == null || Model.Count() == 0)
            {
                <p>No bad words here...</p>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <span class="glyphicon glyphicon-remove"> @item.word</span>

                    <a asp-controller="Home" asp-action="DeleteBadWord" asp-route-id="@item.badwordid" onclick="alert('Are you sure to delete?')">Delete</a>
                    <br />
                }
            }
        </div>
    </div>
</div>