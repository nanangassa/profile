<h2>Data provided by coinmarketcap</h2>

@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table responsive="xl" class="table" style="width:100%">

    <thead>
        <tr>
            <th>
                name

            </th>
            <th>
                price
            </th>

            <th>
                <a asp-action="CryptoIndex" asp-route-sortOrder="@ViewData["NameSortParm"]">@*@Html.DisplayNameFor(model => @model.data.quote.Usd.percent_change_24h)*@24h</a>
            </th>
            <th>
                <a asp-action="CryptoIndex" asp-route-sortOrder="@ViewData["DateSortParm"]"> @*@Html.DisplayNameFor(model => model.Usd.percent_change_1h)*@1h</a>
            </th>
            <th>
                24h
            </th>
            <th>
                7d
            </th>
            <th>
                marketcap
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.data)
        {
            <tr>

                <td>
                    @item.name
                </td>

                <td>
                    @item.quote.USD.price
                </td>
                <td>
                    @item.quote.USD.volume_24h
                </td>
                <td>
                    @item.quote.USD.percent_change_1h
                </td>
                <td>
                    @item.quote.USD.percent_change_24h
                </td>
                <td>
                    @item.quote.USD.percent_change_7d
                </td>
                <td>
                    @item.quote.USD.market_cap
                </td>
            </tr>
        }

</table>


