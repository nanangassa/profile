    </p>*@
<table responsive="xl" class="table" style="width:100%">

    <thead>
        <tr>


            <th>
                <a asp-action="CryptoIndex" asp-route-sortOrder="@ViewData["RankSortParm"]">rank</a>
            </th>

            <th>

                <a asp-action="CryptoIndex" asp-route-sortOrder="@ViewData["NameSortParm"]">name</a>

            </th>

            <th>
                <a asp-action="CryptoIndex" asp-route-sortOrder="@ViewData["PriceSortParm"]">price</a>
            </th>

            <th>
                <a asp-action="CryptoIndex" asp-route-sortOrder="@ViewData["24hvolume"]">24h Volume</a>
            </th>
            <th>
                <a asp-action="CryptoIndex" asp-route-sortOrder="@ViewData["1hSortParm"]"> %1h</a>
            </th>
            <th>
                <a asp-action="CryptoIndex" asp-route-sortOrder="@ViewData["24h%Parm"]"> %24h</a>
            </th>
            <th>
                <a asp-action="CryptoIndex" asp-route-sortOrder="@ViewData["7d%Parm"]"> %7d</a>

            </th>
            <th>
                <a asp-action="CryptoIndex" asp-route-sortOrder="@ViewData["MarketCapSortParm"]"> marketcap</a>

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>

            <td>
                @item.cmc_rank
            </td>


            <td>
                @item.name
            </td>

            <td>
                @item.quote.USD.price
            </td>
            <td>
                @item.quote.USD.volume_24h
            </td>
            <td>
                @item.quote.USD.percent_change_1h
            </td>
            <td>
                @item.quote.USD.percent_change_24h
            </td>
            <td>
                @item.quote.USD.percent_change_7d
            </td>
            <td>
                @item.quote.USD.market_cap
            </td>
        </tr>
        }

</table>


