<h2>Data provided by coinmarketcap</h2>


<form asp-controller="Home" asp-action="CryptoIndex">
    <p>
        Search: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

@*<p>
