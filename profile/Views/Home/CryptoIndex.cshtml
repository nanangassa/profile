<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Data Provided by Coinmarketcap</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Position</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>24h volume</th>
                            <th>%1h</th>
                            <th>%24h</th>
                            <th>Marketcap</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Position</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>24h volume</th>
                            <th>%1h</th>
                            <th>%24h</th>
                            <th>Marketcap</th>

                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.cmc_rank
                                </td>

                                <td>
                                    @item.name
                                </td>

                                <td>
                                    @item.quote.USD.price
                                </td>
                                <td>
                                    @item.quote.USD.volume_24h
                                </td>
                                <td>
                                    @item.quote.USD.percent_change_1h
                                </td>
                                <td>
                                    @item.quote.USD.percent_change_24h
                                </td>
                                @*<td>
                                        @item.quote.USD.percent_change_7d
                                    </td>*@
                                <td>
                                    @item.quote.USD.market_cap
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
